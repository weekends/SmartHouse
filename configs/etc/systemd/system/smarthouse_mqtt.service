[Unit]
Description=SmartHouse Clients
After=network.target dbus_gpio.service mosquitto.service

[Service]
WorkingDirectory=/opt/SmartHouse/clients
ExecStart=/opt/SmartHouse/clients/mqtt_lamp.py
ExecReload=/bin/kill -9 $MAINPID
NotifyAccess=main
#WatchdogSec=10
Restart=on-failure
LimitNPROC=1
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
Alias=smarthouse_clients.service
